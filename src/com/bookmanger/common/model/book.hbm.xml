<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.bookmanger.common.model.Book" table="book">
		<id name="book_id" type="string">
			<column name="book_id" />
			<generator class="assigned" />
		</id>
		<property name="book_name" type="string" length="20">
			<column name="book_name">
				<comment>书名</comment>
			</column>
		</property>
		<property name="author" type="string" length="20">
			<column name="author">
				<comment>作者</comment>
			</column>
		</property>
		<property name="printer" type="string" length="20">
			<column name="printer">
				<comment>出版社</comment>
			</column>
		</property>
		<property name="order" type="string" length="10">
			<column name="book_order">
				<comment>版次</comment>
			</column>
		</property>
		<property name="print_time" type="date" length="100">
			<column name="print_time">
				<comment>版次</comment>
			</column>
		</property>
		<property name="list" type="string" length="255">
			<column name="list">
				<comment>图片</comment>
			</column>
		</property>
		<property name="intruduce" type="string" length="200">
			<column name="intruduce">
				<comment>介绍</comment>
			</column>
		</property>
		<property name="include" type="string">
			<column name="include">
				<comment>类别</comment>
			</column>
		</property>
		<property name="updateTime" type="timestamp">
			<column name="updateTime">
				<comment>类别</comment>
			</column>
		</property> 
	</class>
</hibernate-mapping>
